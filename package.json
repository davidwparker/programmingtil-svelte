{
  "name": "programmingtil-svelte-sapper",
  "description": "Svelte/Sapper frontend for programmingtil-rails (API)",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build",
    "export": "sapper export",
    "exportprod": "NODE_ENV=production npm run tw:build && sapper export",
    "start": "node __sapper__/build",
    "tw:build": "npm run tw:core & npm run tw:b ",
    "tw:core": "NODE_ENV=production postcss static/tailwind.css -o static/index-core.css --config postcss/core",
    "tw:b": "NODE_ENV=production postcss static/tailwind.css -o static/index-blue.css --config postcss/blue",
    "tw:w:b": "postcss static/tailwind.css -o static/index-blue.css --config postcss/blue -w",
    "tw:w:core": "postcss static/tailwind.css -o static/index-core.css --config postcss/core -w"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^9.8.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.1",
    "crypto-js": "^4.0.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "postcss": "^7.0.35",
    "sirv": "^1.0.11",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
  },
  "devDependencies": {
    "css-loader": "^3.6.0",
    "file-loader": "^6.0.0",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-loader": "^3.0.0",
    "sapper": "^0.29.0",
    "svelte": "^3.32.1",
    "svelte-loader": "^2.9.0",
    "webpack": "^4.7.0",
    "webpack-modules": "^1.0.0"
  }
}
